<h2> Editing Post "<%= @post.title %>" </h2>

<div class= "form-box">
  <% form_for [:admin, @post] do |f| %>
    <div class= "field"> 
      <%= f.label :title %> <br />
	  <%= f.text_field :title %>
    </div>

    <div class= "field">
	  <%= f.label :entry %> <br />
	  <%= f.text_area :entry %> 
	 </div>
	 
	 <div class= "field">
	   <%= f.label :author %> <br />
	   <%= f.text_field :author %>
	  
	  <div class= "actions">
	    <%= f.submit :update %>
		or
		<%= link_to 'cancel', admin_posts_path%>
	  </div>
	<%end%>
 </div> 